---

<header>
    <Container>
        <div class="py-8 flex">
            <a class="logo" aria-label="home" href="/">
                <Icon name="logo" class="text-4xl" />
            </a>
            
            <nav class="flex justify-around gap-2 w-full">
                {
                    menuItems.map(({ path, title }) => (
                        <a
                            href={path}
                            class="font-semi-bold text-teal-500 hover:text-teal-900"
                        >
                            <span>
                                {title}
                            </span>
                        </a>
                    ))
                }
            </nav>
            <Icon name="search" class="text-2xl" />

        </div>
    </Container>

</header>