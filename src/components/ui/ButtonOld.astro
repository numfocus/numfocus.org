---
import type { ButtonType } from 'env';

interface Props {
  class?: string;
  button?: ButtonType;
  icon?: 'heart' | 'envelope';
}

const { class: className, button, icon } = Astro.props;

const defaultClass = '';
const variantClasses = {
  default:
    'yellow-500 text-white shadow-none focus:ring-4 hover:organge-600 transition',
  outlined:
    'bg-gradient-to-r from-indigo-700 to-purple-600 text-white shadow-none focus:ring-4 ',
  special: '',
  newsletter:
    'bg-gradient-to-r from-yellow-500 to-orange-600 text-white shadow-none focus:ring-4',
};

const iconVariant = {
  heart: `<Heart color="white" fill="white" />`,
  envelope: `<Mail color="white" />`,
};
---

<button
  type="button"
  class:list={[
    'px-6 py-3 rounded-md font-bold',
    className,
    button && variantClasses[button.variant],
  ]}
>
  {icon && iconVariant[icon]}
</button>
