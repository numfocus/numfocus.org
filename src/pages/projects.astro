---
import Container from '@components/Container.astro';
import Layout from '@layouts/Layout.astro';
import PageHeader from '@components/PageHeader.astro';
import ProjectGrid from '@components/ProjectGrid/ProjectGrid';

import type { Project } from 'env';

import directus from '../../lib/directus';
import { readItems, readSingleton } from '@directus/sdk';

const global = await directus.request(readSingleton('General'));
const projects = await directus.request<Project[]>(readItems('projects'));
const features = await directus.request<Project[]>(readItems('project_features'));
const industries = await directus.request<Project[]>(readItems('project_industries'));
const languages = await directus.request<Project[]>(readItems('project_languages'));

const filterValues = { features, industries, languages }

---

<Layout title={`Projects | ${global.site_name} - ${global.site_subheader}`}>
  <Container>
    <PageHeader title={global.site_name}>
      <p>{global.site_subheader}</p>
      <p>{global.hero_tagline}</p>
      <div set:html={global.hero_body} />
    </PageHeader>
    <ProjectGrid {filterValues} {projects} />
  </Container>
</Layout>
